{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./out",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "lib": ["es6"],
        "types": ["vscode", "node"]
    },
    "include": ["src/**/*.ts"],
}
