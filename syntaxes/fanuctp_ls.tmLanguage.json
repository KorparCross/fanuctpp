{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Fanuc LS Language",
	"scopeName": "source.fanuctp_ls",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.remark.fanuctp_ls",
					"match": "(?<=:\\s*)(!.*)"
				},
				{
					"name": "keyword.comment.fanuctp_ls",
					"match": "//(.*)$"
				},
				{
					"name": "keyword.control.fanuctp_ls",
					"match": "\\b(JMP|LBL|CALL|IF|THEN|ELSE|ENDIF|END|WAIT|SKIP|CONDITION|J|L|C|AND|OR|TIMEOUT|SELECT|RUN|LOCK|UNLOCK|PREG|ABORT|PAUSE|SkipJump|TORQ_LIMIT|PULSE)\\b"
				},
				{
					"name": "keyword.adv_control.fanuctp_ls",
					"match": "\\b(VISION|RUN_FIND|GET_OFFSET|GET_PASSFAIL|GET_NFOUND)\\b"
				},
				{
					"name": "keyword.movetype.fanuctp_ls",
					"match": "(\\bCNT\\d+|\\bFINE|\\bACC\\d+)"
				},
				{
					"name": "keyword.on.fanuctp_ls",
					"match": "\\b(ON)\\b"
				},
				{
					"name": "keyword.off.fanuctp_ls",
					"match": "\\b(OFF)\\b"
				},
				{
					"name": "keyword.headerspace.fanuctp_ls",
					"begin": "/APPL",
					"end": "/MN"
				},
				{
					"name": "keyword.header.fanuctp_ls",
					"match": "(\\b|\\/)(PROG|ATTR|APPL|MN|POS|END|Macro|MNEDITOR|DATE|TIME|READ|READ_WRITE|OWNER|COMMENT|PROG_SIZE|CREATE|MODIFIED|FILE_NAME|VERSION|LINE_COUNT|MEMORY_SIZE|PROTECT|TCD|STACK_SIZE|TASK_PRIORITY|TIME_SLICE|BUSY_LAMP_OFF|ABORT_REQUEST|PAUSE_REQUEST|DEFAULT_GROUP|CONTROL_CODE|LOCAL_REGISTERS)(\\b|\\.)"
				},
				{
					"name": "keyword.operator.fanuctp_ls",
					"match": "(\\+|\\-|\\<|\\=|\\>|\\!|\\%)"
				},
				{
					"name": "keyword.label.fanuctp_ls",
					"match": "(?<=\\[\\d+:)(.*?)(?=\\])"
				},
				{
					"name": "keyword.variable.fanuctp_ls",
					"match": "\\$\\w+"
				}
			]
		},
		"constants": {
			"patterns": [					
				{
					"name": "constant.numeric.fanuctp_ls",
					"match": "\\b\\d+\\.?\\d*\\b"
				},				
				{
					"name": "constant.language.fanuctp_ls",
					"match": "\\b(UTOOL_NUM|UFRAME_NUM|UTOOL|UFRAME|OVERRIDE|RSR|UALM|PAYLOAD|TIMER|DI|DO|GI|GO|RI|RO|UI|UO|SI|SO|SPI|SPO|SSI|SSO|CSI|CSO|AR|SR|GO|F|M|PR|VR|UF|UT|CONFIG|X|Y|Z|W|P|R|U|T|N)\\b"
				},
				{
					"name": "constant.newline.fanuctp_ls",
					"match": "^\\s*\\d{1,4}:"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.single_quote.fanuctp_ls",
					"begin": "\\'",
					"end": "\\'"
				},
				{
					"name": "string.double_quote.fanuctp_ls",
					"begin": "\"",
					"end": "\""
				}
			]
		}
	}
}